# Telegram API Credentials (from my.telegram.org)
API_ID=123456
API_HASH=your_api_hash_here

# Telegram Session String - Use: npm run generate-session
TG_SESSION=

# Bot Token (for commands) - Get from @BotFather
BOT_TOKEN=

# Monitoring Configuration
# Comma-separated list of channel usernames to monitor
SOURCE_CHANNELS=some_news_channel,another_channel

# Your output channel username
TARGET_CHANNEL=my_aggregated_news

# Database (auto-configured for internal docker-compose PostgreSQL)
# Only change if using external database
# DATABASE_URL=postgresql://qubot:qubot@postgres:5432/qubot

# Comma-separated list of keywords to filter for
KEYWORDS=release,launch,update

# Optional: Only forward from specific users (Usernames or IDs)
# Leave empty to allow any user
FROM_USERS=admin_user,12345678

# Rate Limiting (milliseconds between messages, default 30000 = 30 seconds)
RATE_LIMIT_MS=30000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# RSS Feature (optional - uses built-in defaults if not set)
# RSS_SOURCES: JSON array of sources, e.g. [{"name":"BBC","url":"...","category":"news"}]
# RSS_POLL_INTERVAL_MS: Poll interval in ms (default 300000 = 5 minutes)
RSS_POLL_INTERVAL_MS=300000
