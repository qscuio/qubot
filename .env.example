# Telegram API Credentials (from my.telegram.org)
API_ID=123456
API_HASH=your_api_hash_here

# Telegram Session String (generated via npm run generate-session)
TG_SESSION=your_session_string_here

# Monitoring Configuration
# Comma-separated list of channel usernames to monitor
SOURCE_CHANNELS=some_news_channel,another_channel

# Your output channel username
TARGET_CHANNEL=my_aggregated_news

# Comma-separated list of keywords to filter for
KEYWORDS=release,launch,update

# Optional: Only forward from specific users (Usernames or IDs)
# Leave empty to allow any user
FROM_USERS=admin_user,12345678

# Rate Limiting (milliseconds between messages, default 30000 = 30 seconds)
RATE_LIMIT_MS=30000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
