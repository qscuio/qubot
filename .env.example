# Telegram API Credentials (from my.telegram.org)
API_ID=123456
API_HASH=your_api_hash_here

# Telegram Session String - Use: npm run generate-session
TG_SESSION=

# ============ BOT TOKENS ============
# Each bot needs its own token from @BotFather

# RSS Bot - for subscription commands (/sub, /unsub, /list)
RSS_BOT_TOKEN=

# AI Bot - for AI chat commands (/ai, /models, /providers)
AI_BOT_TOKEN=

# Agent Bot - advanced AI with agents/tools (/start, /ask)
AGENT_BOT_TOKEN=

# Monitor Bot - for channel monitoring commands (/sources, /monitor)
MONITOR_BOT_TOKEN=

# Crawler Bot - for web crawler commands
CRAWLER_BOT_TOKEN=

# Vibe Remote Bot - for AI coding agents and Git operations
VIBE_BOT_TOKEN=

# ============ WEBHOOK CONFIG (Optional) ============
# If set, uses webhook mode. If not, uses polling mode.
WEBHOOK_URL=https://bot.yourdomain.com
BOT_PORT=10001
BOT_SECRET=random_secret_string_for_security

# ============ MONITORING (Userbot Features) ============
SOURCE_CHANNELS=some_news_channel,another_channel
TARGET_CHANNEL=my_aggregated_news
VIP_TARGET_CHANNEL=
REPORT_TARGET_CHANNEL=
BLACKLIST_CHANNELS=
KEYWORDS=release,launch,update
FROM_USERS=
ALLOWED_USERS=

# ============ AI PROVIDER KEYS ============
GROQ_API_KEY=
GEMINI_API_KEY=
OPENAI_API_KEY=
CLAUDE_API_KEY=
NVIDIA_API_KEY=
GLM_API_KEY=
MINIMAX_API_KEY=
OPENROUTER_API_KEY=

# ============ STOCK TRACKING (A-Stock Market) ============
# Channel for limit-up stock alerts
STOCK_ALERT_CHANNEL=
# Enable limit-up stock tracker (default: true)
ENABLE_LIMIT_UP=true
# Enable sector analysis tracking (default: true)
ENABLE_SECTOR=true

# ============ CRAWLER ============
# Crawl interval in milliseconds (default: 1 hour)
CRAWLER_INTERVAL_MS=3600000
# Enable web crawler service (default: true)
ENABLE_CRAWLER=true

# ============ MESSAGE PROCESSING ============
# Enable AI summarization of messages
MONITOR_SUMMARIZE=true
# Summarize after N messages
MONITOR_BUFFER_SIZE=200
# Summarize after N seconds (2 hours)
MONITOR_BUFFER_TIMEOUT=7200

# Message Compression
COMPRESSOR_MIN_LENGTH=15
COMPRESSOR_MAX_MESSAGES=200
COMPRESSOR_SCORE_THRESHOLD=0.2

# Deduplication (SimHash)
DEDUP_CACHE_SIZE=5000
DEDUP_SIMILARITY_THRESHOLD=0.85

# ============ TWITTER MONITORING ============
# JSON array of Twitter account credentials
# Format: [{"username":"xxx","password":"xxx","email":"xxx"}]
TWITTER_ACCOUNTS=

# ============ GITHUB EXPORT (for /export command) ============
# Git repo URL for exporting chat notes (e.g., git@github.com:user/notes.git)
# Make sure the server's SSH public key is added to the repo's deploy keys
NOTES_REPO=
# Optional SSH overrides for GitHub export
# GIT_SSH_COMMAND=ssh -i /root/.ssh/id_ed25519 -o IdentitiesOnly=yes -o StrictHostKeyChecking=accept-new
GIT_SSH_COMMAND=
# SSH key path used when GIT_SSH_COMMAND is not set
GIT_SSH_KEY_PATH=
# Known hosts file to enforce host key checking
GIT_KNOWN_HOSTS=

# ============ ADVANCED AI SETTINGS ============
# Provider for advanced AI features
AI_ADVANCED_PROVIDER=groq
# Enable Claude extended thinking
AI_EXTENDED_THINKING=false
# SearXNG URL for web search tool
SEARX_URL=
# GitHub token for GitHub tools and repo operations
BOT_GITHUB_TOKEN=
# Cloudflare API credentials for Cloudflare tools
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
# Comma-separated allowed paths for file tools
AI_ALLOWED_PATHS=

# ============ REST API ============
# Enable REST API server (default: true)
API_ENABLED=true
# API server port (default: 10002, separate from webhook port)
API_PORT=10002
# API keys for authentication (comma-separated, format: key1:userId1,key2:userId2)
# Example: myapikey123:1,anotherapikey:2
API_KEYS=

# ============ WEB FRONTEND ============
# Web frontend URL (for Nginx SSL setup)
WEBFRONT_URL=

# ============ OTHER ============
RATE_LIMIT_MS=30000
LOG_LEVEL=info
RSS_POLL_INTERVAL_MS=300000

# Database (auto-configured for docker-compose PostgreSQL)
# DATABASE_URL=postgresql://qubot:qubot@postgres:5432/qubot
